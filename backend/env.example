# Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
# For development: Use local PostgreSQL
# For production: Use your production database URL
DATABASE_URL="postgresql://username:password@localhost:5432/pethub_db"

# JWT Secret for token generation (CHANGE THIS IN PRODUCTION)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Node Environment
NODE_ENV="development"

# Optional: Server Configuration
PORT=3000

# Optional: CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://192.168.254.140:3000"

# Optional: File Upload Configuration
MAX_FILE_SIZE=15728640
UPLOAD_DIRECTORY="./public/uploads"
